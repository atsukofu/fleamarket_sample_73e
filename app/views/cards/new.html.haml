- breadcrumb :newcard
.wrapper
  = render "header"
  .cardmain-page
    %main.containerClearfix
      .side-view
        = render "side"
      .contents3
        .creditContainer
          .creditContainer__head
            クレジットカード情報入力
          .card
            .card__content
              .cardGroup
                %label.cardGroup
                  カード番号
                %span.requiredItem
                  必須
                %input{type: "text", size: "40", class:"cardNumber", placeholder: "半角数字のみ", maxlengh: "19", id: "card_number"}
              %ul.card-list
                %li
                  =link_to do
                    = image_tag 'visa-icon.png', alt: 'visa', height: '20', width: '49'
                %li
                  =link_to do
                    = image_tag 'master-icon.png', alt: 'master', height: '20', width: '34'
                %li
                  =link_to do
                    = image_tag 'saison-icon.svg', alt: 'saison', height: '20', width: '30'
                %li
                  =link_to do
                    = image_tag 'jcb-icon.png', alt: 'jcb', height: '20', width: '32'
                %li
                  =link_to do
                    = image_tag 'amex-icon.png', alt: 'amex', height: '20', width: '21'
                %li
                  =link_to do
                    = image_tag 'diners-icon.gif', alt: 'diners', height: '20', width: '32'
                %li
                  =link_to do
                    = image_tag 'discover-icon.png', alt: 'discover', height: '20', width: '32'
              .cardExpiration
                %label.cardExpiration__date
                  有効期限
                %span.requiredItem
                  必須
                %br
              .monthBox
                %select.monthBox__expire#exp_month
                  %option{value: "01"}
                    01
                  %option{value: "02"}
                    02
                  %option{value: "03"}
                    03
                  %option{value: "04"}
                    04
                  %option{value: "05"}
                    05
                  %option{value: "06"}
                    06
                  %option{value: "07"}
                    07
                  %option{value: "08"}
                    08
                  %option{value: "09"}
                    09
                  %option{value: "10"}
                    10
                  %option{value: "11"}
                    11
                  %option{value: "12"}
                    12
                  %i.fas.fa-chevron-down
                %span
                  月
              .yearBox
                %select.yearBox__expire#exp_year
                  %option{value: "20"}
                    20
                  %option{value: "21"}
                    21
                  %option{value: "22"}
                    22
                  %option{value: "23"}
                    23
                  %option{value: "24"}
                    24
                  %option{value: "25"}
                    25
                  %option{value: "26"}
                    26
                  %option{value: "27"}
                    27
                  %option{value: "28"}
                    28
                  %option{value: "29"}
                    29
                  %option{value: "30"}
                    30
                  %i.fas.fa-chevron-down
                %span
                  年
              .securityGroup
                %label.securityGroup__code
                  セキュリティコード
                %span.requiredItem
                  必須
                %input{type: "text", size: "40", class: "securityGroup__number", placeholder: "カード背面4桁もしくは3桁の番号",id: "cvs"}
              .helpNumber
                .helpNumber__text
                  %span.helpNumber__text--question
                    ?
                  カード裏面の番号とは？
                .securityCode-info
                  %button{type: "button", id: "token_submit", class: "btn-add"}
                    クレジット情報を登録する
                  -# %mypage_btn
                  -#  = link_to user_path(current_user.id), class: "submit-btn" do
                  -#    マイページへ戻る
  = render "footer"