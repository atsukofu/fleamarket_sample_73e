.sale-item-page
  -# カテゴリのナビゲーター
  .category-nav
    %ul
      %li
        = link_to "FURIMA", "#"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "ベビー・キッズ", "#"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "ベビー服(男女兼用)~95cm", "#"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "アウター", "#"
      %li
        %i.fa.fa-angle-right
      %li
        = link_to "商品名のエリア", "#", class: "current-page"
     
  .sale-item__container
    %h2.item-name
      = @item.name
    .item-image-box
      .item-image-box__main
        = image_tag src="item-dummy-1.png",class: "item-image-box__main--image"
      %ul.item-image-thumbnail
        - @item.images.each do |image|
          %li.item-image-thumbnail__part
            = image_tag image.image_url, class:"item-image-thumbnail__part--mini-image"
    .item-price-box
      .item-price-box__price
        =@item.price
      .item-price-box__detail
        %span.item-price-box__detail--tax
          (税込)
        %span.item-price-box__detail--postage
          - case @item.postage_payer
            - when 1
              = "送料込み"
            - when 2
              = "送料別"

    .item-content
      = @item.content
      
      <br/>
    //出品者以外がログイン時のみ閲覧可能
    = link_to "購入する", "#", class: "item-buy-link"
    //ここまで

    .item-content
      %table
        %tbody
          %tr
            %th
              出品者
            %td
              hoge
          %tr
            %th
              カテゴリー
            %td
              =link_to "メンズ", "#"
              %br
              =link_to "ジャケット/アウター", "#"
              %br
              =link_to "ノーカラージャケット", "#"
          %tr
            %th
              ブランド
            %td
              = @item.brand
          %tr
            %th
              サイズ
            %td
              = @item.size
          %tr
            %th
              商品の状態
            %td
              - case @item.condition
                - when 1
                  = "新品、未使用"
                - when 2
                  = "未使用に近い"
                - when 3
                  = "目立った傷や汚れなし"
                - when 4
                  = "やや傷や汚れあり"
                - when 5
                  = "傷や汚れあり"
                - when 6
                  = "全体的に状態が悪い"
          %tr
            %th
              配送方法
            %td
              未定
          %tr
            %th
              配送料の負担
            %td
              - case @item.postage_payer
                - when 1
                  = "送料込み(出品者負担)"
                - when 2
                  = "着払い(購入者負担)"
          %tr
            %th
              発送元の地域
            %td
              =link_to "#" do
                青森県
          %tr
            %th
              発送日の目安
            %td
              - case @item.preparation_day
                - when 1
                  = "1~2日で発送"
                - when 2
                  = "2~3日で発送"
                - when 3
                  = "4~7日で発送"
              
    //出品者以外がログイン時のみ閲覧可能
    .item-menu
      %ul.item-menu__list
        %li.item-menu__list--like-btn
          %icon.fa.fa-star
          お気に入り 0
        %li.item-menu__list--report-btn
          = link_to "#" ,class:"report-link" do
            %icon.fa.fa-flag
            不適切な商品の通報
    //ここまで
  
  //出品者のみ閲覧可能
  .exhibitor-menu-container 
    = link_to "商品を編集する","#", class: "exhibitor-menu-container__edit"
    %p or
    = link_to "この商品を削除する","#", class: "exhibitor-menu-container__delete"
  //ここまで

  //ログイン時のみ閲覧可能（ログインしているユーザー全て）
  .comment-container
    = form_with url: "#" do |f|
      = f.text_area :comment, class: "comment-inputbox"
      %p.notice
