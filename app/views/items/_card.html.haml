.main-page
  %main.container.clearfix
    .contents
      %section.credit-container
        %h2.credit-head
          クレジットカード情報入力
        .card-form
          .card-form__content
            .card-group
              %label.card-group
                カード番号
              %span.required-item
                必須
              %input{type: "text", size: "40", class:"card-number", placeholder: "半角数字のみ", maxlengh: "19"}
            %ul.card-list
              %li
                =link_to do
                  = image_tag 'visa-icon.png', alt: 'visa', height: '20', width: '49'
              %li
                =link_to do
                  = image_tag 'master-icon.png', alt: 'master', height: '20', width: '34'
              %li
                =link_to do
                  = image_tag 'saison-icon.svg', alt: 'saison', height: '20', width: '30'
              %li
                =link_to do
                  = image_tag 'jcb-icon.png', alt: 'jcb', height: '20', width: '32'
              %li
                =link_to do
                  = image_tag 'amex-icon.png', alt: 'amex', height: '20', width: '21'
              %li
                =link_to do
                  = image_tag 'diners-icon.gif', alt: 'diners', height: '20', width: '32'
              %li
                =link_to do
                  = image_tag 'discover-icon.png', alt: 'discover', height: '20', width: '32'
            .card-expiration
              %label.expiration-date
                有効期限
              %span.required-item
                必須
              %br
            .select-month-box
              %select.expire-month
                %option{value: "01"}
                  01
                %option{value: "02"}
                  02
                %option{value: "03"}
                  03
                %option{value: "04"}
                  04
                %option{value: "05"}
                  05
                %option{value: "06"}
                  06
                %option{value: "07"}
                  07
                %option{value: "08"}
                  08
                %option{value: "09"}
                  09
                %option{value: "10"}
                  10
                %option{value: "11"}
                  11
                %option{value: "12"}
                  12
                %i.fas.fa-chevron-down
              %span
                月
            .select-year-box
              %select.expire-year
                %option{value: "20"}
                  20
                %option{value: "21"}
                  21
                %option{value: "22"}
                  22
                %option{value: "23"}
                  23
                %option{value: "24"}
                  24
                %option{value: "25"}
                  25
                %option{value: "26"}
                  26
                %option{value: "27"}
                  27
                %option{value: "28"}
                  28
                %option{value: "29"}
                  29
                %option{value: "30"}
                  30
                %i.fas.fa-chevron-down
              %span
                年
            .security-group
              %label.security-code
                セキュリティコード
              %span.required-item
                必須
              %input{type: "text", size: "40", class: "security-number", placeholder: "カード背面4桁もしくは3桁の番号"}
            .help-number
              .help-number__text
                %span.number-question
                  ?
                カード裏面の番号とは？
              .security-code-info
            %button{type: "button", id: "#", class: "btn-add"}
              追加する
